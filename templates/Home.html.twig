<script>
    document.addEventListener('DOMContentLoaded', function() {
        const languageSelectBtn = document.getElementById('languageSelect');
        const languageDropdown = document.getElementById('languageDropdown');

        function changeLanguage(language) {
            // Ваш код для изменения языка
            alert('Language changed to ' + language);
            // Добавьте код для обновления интерфейса согласно выбранному языку
        }

        languageSelectBtn.addEventListener('click', function() {
            languageDropdown.style.display = (languageDropdown.style.display === 'none' || languageDropdown.style.display === '') ? 'block' : 'none';
        });

        // Закрывать выпадающий список при клике вне него
        window.addEventListener('click', function(event) {
            if (!event.target.matches('#languageSelect')) {
                languageDropdown.style.display = 'none';
            }
        });
    });
    document.addEventListener('DOMContentLoaded', function() {
        const fileInput = document.getElementById('fileInput');
        const mediaGallery = document.getElementById('mediaGallery');
        const zoomModal = document.getElementById('zoomModal');
        const zoomedImage = document.getElementById('zoomedImage');
        const closeZoom = document.querySelector('.close');

        fileInput.addEventListener('change', function() {
            mediaGallery.addEventListener('click', function(event) {
                if (event.target.tagName === 'IMG') {
                    zoomedImage.src = event.target.src;
                    zoomModal.style.display = 'block';
                }
            });
            closeZoom.addEventListener('click', function() {
                zoomModal.style.display = 'none';
            });
            window.addEventListener('click', function(event) {
                if (event.target === zoomModal) {
                    zoomModal.style.display = 'none';
                }
            });
        });
    });
    document.addEventListener('DOMContentLoaded', function() {
        const fileInput = document.getElementById('fileInput');
        const mediaGallery = document.getElementById('mediaGallery');
        const noMediaMessage = document.getElementById('noMediaMessage');
        const clearAllBtn = document.getElementById('clearAll');

        fileInput.addEventListener('change', function() {
            if (this.files.length === 0) {
                noMediaMessage.style.display = 'block';
            } else {
                noMediaMessage.style.display = 'none';
                for (const file of this.files) {
                    const fileType = file.type.split('/')[0];
                    const mediaItem = document.createElement('div');
                    mediaItem.classList.add('media-item');

                    if (fileType === 'image') {
                        const imgElement = document.createElement('img');
                        imgElement.src = URL.createObjectURL(file);
                        mediaItem.appendChild(imgElement);
                    } else if (fileType === 'video') {
                        const videoElement = document.createElement('video');
                        videoElement.src = URL.createObjectURL(file);
                        videoElement.controls = true;
                        mediaItem.appendChild(videoElement);
                    } else if (fileType === 'audio') {
                        const audioElement = document.createElement('audio');
                        audioElement.src = URL.createObjectURL(file);
                        audioElement.controls = true;
                        mediaItem.appendChild(audioElement);
                    }

                    const deleteButton = document.createElement('button');
                    deleteButton.classList.add('delete-button');
                    deleteButton.innerText = '❌';
                    deleteButton.addEventListener('click', function() {
                        if (confirm('Are you sure you want to delete the file?')) {
                            mediaItem.remove();
                            if (mediaGallery.children.length === 0) {
                                noMediaMessage.style.display = 'block';
                            }
                        }
                    });

                    mediaItem.appendChild(deleteButton);
                    mediaGallery.appendChild(mediaItem);

                    mediaItem.addEventListener('click', function() {
                        if (!this.classList.contains('zoomed')) {
                            this.classList.add('zoomed');
                            const closeZoom = document.createElement('button');
                            closeZoom.innerText = 'Close Zoom';
                            closeZoom.addEventListener('click', function() {
                                mediaItem.classList.remove('zoomed');
                                closeZoom.remove();
                            });
                            this.appendChild(closeZoom);
                        }
                    });
                }
                this.value = null;
            }
        });

        clearAllBtn.addEventListener('click', function() {
            const galleryItems = document.querySelectorAll('.media-item');
            if (galleryItems.length > 0) {
                if (confirm('Вы точно хотите удалить все файлы?')) {
                    galleryItems.forEach(item => item.remove());
                    noMediaMessage.style.display = 'block';
                }
            } else {
                alert('У вас нет загруженных файлов для удаления.');
            }
        });
    });
    document.addEventListener('DOMContentLoaded', function() {
        const settingsButton = document.querySelector('.settings-button');
        const settingsContent = document.querySelector('.settings-content');
        const backgroundColorPicker = document.getElementById('backgroundColorPicker');
        const backgroundImagePicker = document.getElementById('backgroundImagePicker');
        const removeBackgroundImageBtn = document.getElementById('removeBackgroundImage');
        const body = document.body;

        settingsButton.addEventListener('click', function() {
            settingsContent.classList.toggle('active');
        });

        backgroundColorPicker.addEventListener('change', function() {
            body.style.backgroundColor = this.value;
        });

        backgroundImagePicker.addEventListener('change', function(event) {
            const file = event.target.files[0];
            const reader = new FileReader();

            reader.onload = function() {
                body.style.backgroundImage = `url(${reader.result})`;
            };

            reader.readAsDataURL(file);
        });

        removeBackgroundImageBtn.addEventListener('click', function() {
            body.style.backgroundImage = 'none';
        });
    });
</script>
