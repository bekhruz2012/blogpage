            object-fit: cover;
        }

        .delete-button {
            position: absolute;
            top: 10px;
            right: 10px;
            background-color: #ff4d4d;
            color: #fff;
            border: none;
            padding: 5px;
            border-radius: 50%;
            cursor: pointer;
            display: none;
            transition: background-color 0.3s ease;
        }

        .media-item:hover .delete-button {
            display: block;
        }

        .delete-button:hover {
            background-color: #cc0000;
        }

        .zoomed-media {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 9999;
            display: none;
        }

        .zoomed-media.active {
            display: block;
        }

        .zoomed-media img {
            max-width: 90%;
            max-height: 90%;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        }

        #closeZoom {
            display: none;
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background-color: #fff;
            color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #closeZoom:hover {
            background-color: #0056b3;
            color: #fff;
        }

        .zoomed-media.active #closeZoom {
            display: block;
        }

        .additional-element {
            margin-top: 10px;
            width: 100px;
            height: 100px;
            background-color: #fff;
            border: 2px solid #007bff;
            border-radius: 50%;
        }

        .additional-element:hover {
            transform: scale(1.1);
            transition: transform 0.3s ease;
        }

        .media-item:hover {
            opacity: 0.8;
        }

        #clearAll {
