            padding: 10px 20px;
            background-color: #fff;
            color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #clearAll:hover {
            background-color: #0056b3;
            color: #fff;
        }
        .zoomed-media {
            position: fixed;
            top: 50%;
            left: 50%;
            transform: translate(-50%, -50%);
            z-index: 9999;
            display: none;
        }

        .zoomed-media.active {
            display: block;
        }

        .zoomed-media img {
            max-width: 90%;
            max-height: 90%;
            border-radius: 10px;
            box-shadow: 0 0 20px rgba(0, 0, 0, 0.5);
        }

        #closeZoom {
            display: none;
            position: absolute;
            top: 20px;
            right: 20px;
            padding: 10px 20px;
            background-color: #fff;
            color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            transition: background-color 0.3s ease;
        }

        #closeZoom:hover {
            background-color: #0056b3;
            color: #fff;
        }

        .zoomed-media.active #closeZoom {
            display: block;
        }

        .side-panel {
            position: fixed;
            top: 50px;
            right: 20px;
            display: flex;
            flex-direction: column;
            align-items: center;
        }

        .settings-button {
            padding: 10px;
            background-color: #fff;
            color: #007bff;
            border: none;
            border-radius: 5px;
            cursor: pointer;
            margin-bottom: 10px;
            transition: background-color 0.3s ease;
        }

        .settings-button:hover {
            background-color: #f0f0f0;
        }

        .settings-content {
            display: none;
            flex-direction: column;
            align-items: center;
            background-color: #fff;
            padding: 10px;
